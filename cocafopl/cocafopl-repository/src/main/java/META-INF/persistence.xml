<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="cocafoplPersistence" transaction-type="RESOURCE_LOCAL">

		<!-- Hibernatovsky provider pro dataSource (alternativa je tady treba EclipseLink) -->
		<!-- !!! musi byt uveden pred dataSourcem !!! -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<!-- dataSource ktery pouzije muj lokalni server, tedy Achape-tomcat. Kompletni 
			ConnectString je nakonfigurovan v context.xml na lokalnim serveru (tomcat) -->
		<non-jta-data-source>java:comp/env/jdbc/Cocafoppl</non-jta-data-source>
		<class>vwg.skoda.cocafopl.entity.ArchCenikSap</class>
		<class>vwg.skoda.cocafopl.entity.ArchKalkcd</class>
		<class>vwg.skoda.cocafopl.entity.ArchKalkcdPK</class>
		<class>vwg.skoda.cocafopl.entity.ArchKalkulace</class>
		<class>vwg.skoda.cocafopl.entity.ArchKurzCzk</class>
		<class>vwg.skoda.cocafopl.entity.ArchKurzEur</class>
		<class>vwg.skoda.cocafopl.entity.ArchKusovnik</class>
		<class>vwg.skoda.cocafopl.entity.ArchKusyProv</class>
		<class>vwg.skoda.cocafopl.entity.ArchKusyProvPK</class>
		<class>vwg.skoda.cocafopl.entity.ArchPredstavitel</class>
		<class>vwg.skoda.cocafopl.entity.ArchPredstavitelPr</class>
		<class>vwg.skoda.cocafopl.entity.ArchKalkulaceView</class>
		
		<properties>
			<property name="hibernate.connection.driver_class" value="oracle.jdbc.driver.OracleDriver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<!-- <property name="hibernate.default_schema" value="cocafoppl" /> -->
		</properties>

	</persistence-unit>
</persistence>
